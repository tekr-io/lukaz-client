{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
